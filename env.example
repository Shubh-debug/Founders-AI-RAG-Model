# Database Configuration
# For Docker compose, the service name 'postgres' is the hostname
POSTGRES_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_DB=founders_ai
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/founders_ai

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# OpenAI Configuration (required unless DEBUG=true)
OPENAI_API_KEY=your-openai-key

# Application Configuration
# Set DEBUG=true to relax API key/database URL validation for local dev
DEBUG=true
LOG_LEVEL=INFO